<div class='checkout'>
  <div class='container'>
    <div class='row checkout-header hidden-xs'>
      <div class='col-lg-8 col-sm-8'>
        <h2>Checkout</h2>
      </div>
      <div class='col-lg-4 col-sm-4'>
        <h2>Order Summary</h2>
      </div>
    </div>
    <div class='row checkout-panel'>
      <h2 class="checkout-header visible-xs">Checkout</h2>
      <div class='col-lg-8 col-sm-8'>
        <form accept-charset="UTF-8" action="#" class="new_order" id="new_order" method="post">
          <h3>DELIVERY ADDRESS</h3>
          <div class='form-check-group'>
            <label>First Name</label>
            <input id="shipping_firstname" name="order[shipping][first_name]" type="text" value="Tom" />
          </div>
          <div class='form-check-group'>
            <label>Last Name</label>
            <input id="shipping_lastname" name="order[shipping][last_name]" type="text" value="Dallimore" />
          </div>
          <div class='form-check-group'>
            <label>Telephone</label>
            <input id="shipping_telephone" name="order[shipping][telephone]" type="text" value="0394323829" />
          </div>
          <div class='form-check-group'>
            <label>Address</label>
            <input id="shipping_address" name="order[shipping][street_address]" type="text" value="1 Union Building" />
          </div>
          <div class='form-check-group'>
            <label>City</label>
            <input id="shipping_city" name="order[shipping][city]" type="text" value="Chicago" />
          </div>
          <div class='form-check-group-half'>
            <label>Zip</label>
            <input id="shipping_zip" name="order[shipping][zip]" type="text" value="hwudqowi" />
          </div>
          <div class='form-check-group-half'>
            <label>Country</label>
            <select id="shipping_country" name="order[shipping][country]">
              <option value=""></option>
              <option value="AU">Australia</option>
            </select>
          </div>
          <h3>PAYMENT DETAILS</h3>
          <div class='form-check-group'>
            <label>First Name</label>
            <input id='firstname' name='payment[first_name]' type='text' value='Tom'>
          </div>
          <div class='form-check-group'>
              <label>Last Name</label>
              <input id='lastname' name='payment[last_name]' type='text' value='Dallimore'>
          </div>
          <div class="payment-choices">
            <div>
              <input checked="" class="pay-method" name="pay_method" type="radio" value="express-checkout">
              <img alt="Paypal" src="../img/card-jembot1.png">
            </div>
          </div>
          <h3>BILLING ADDRESS</h3>
          <div class='form-check-group-full'>
            <input id='use_shipping_address' name='use_shipping' type='checkbox' value='1'>
            <span>Use my Shipping Address</span>
          </div>
          <div class='form-check-group'>
            <label>Telephone</label>
            <input id="billing_telephone" name="order[billing][telephone]" type="text" value="027313289" />
          </div>
          <div class='form-check-group'>
            <label>Address</label>
            <input id="billing_address" name="order[billing][address]" type="text" value="1 Union Building" />
          </div>
          <div class='form-check-group'>
            <label>City</label>
            <input id="billing_city" name="order[billing][city]" required="required" type="text" value="Chicago" />
          </div>
          <div class='form-check-group-half'>
            <label>Zip</label>
            <input id="billing_zip" name="order[billing][zip]" required="required" type="text" value="hwudqowi" />
          </div>
          <div class='form-check-group-half'>
            <label>Country</label>
            <select id="billing_country" name="order[billing][country]" required="required">
              <option value=""></option>
              <option value="AU">Australia</option>
            </select>
          </div>
        </form>
      </div>
