<div class='checkout'>
  <div class='container'>
    <div class='row checkout-header hidden-xs'>
      <div class='col-lg-8 col-sm-8'>
        <h2>My cart</h2>
      </div>
      <div class='col-lg-4 col-sm-4'>
        <h2>Order Summary</h2>
      </div>
    </div>
    <div class='row checkout-panel'>
      <h2 class="checkout-header visible-xs">My cart</h2>
      <div class="col-lg-8 col-sm-8">
        <div id="empty-cart-container">
          <h3>Empty Cart</h3>
          <p>You need to add some items to your cart before continuing to checkout.</p>
        </div>
      </div>
      <h2 class='checkout-header visible-xs'>Order Summary</h2>
      <div class='col-lg-4 col-sm-4 order-summary'>
        <div id='checkout-calculation'>
          <div id='checkout-breakdown'>
            <div>
              <span>SUB-TOTAL:</span>
              <span>DELIVERY:</span>
            </div>
            <div>
              <span>£0.00</span>
              <span>£0.00</span>
            </div>            
          </div>
          <hr>
          <div id="checkout-total">
            <div>
              <strong>ORDER TOTAL:</strong>
            </div>
            <div>
              <strong>£0.00</strong>
            </div>
          </div>
          <hr>
        </div>
        <div id='checkout-secure'>
          <img alt="Secure checkout" src="img/secure-checkout.png" />
          <span class='text-shipping'>SECURE CHECKOUT</span>
        </div>
      </div>
    </div>
  </div>
</div>